<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidlo.myapplication.MainActivity">

    <!-- Background Day-->
    <include layout="@layout/layout_day_sky" />

    <!-- Background Night-->
    <include layout="@layout/layout_night_sky" />

    <!-- Sun & Moon -->
    <com.example.davidlo.myapplication.VerticalViewPager
        android:id="@+id/activity_main_fragments_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Cloud Day-->
    <include
        layout="@layout/layout_day_cloud"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp" />

    <!-- Cloud Night-->
    <include
        layout="@layout/layout_night_cloud"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp" />

</RelativeLayout>
